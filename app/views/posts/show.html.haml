- set_page_title(@post.title)

.container
  .content.content--xxwide.u-center
    %h1.a-headline
      = post_status(@post)
      = @post.title

.container
  .content.content--tight
    %h4
      = link_to "By #{@post.author.full_name}", @post.author
      %span.u-float-right
        = post_date(@post)
    = render partial: 'shared/like_link', locals: { subject: @post }
    = link_to 'Edit', edit_post_path(@post), class: 'a-button a-button--corner' if can? :edit, @post
    = sanitize @post.content

- if @post.tags.any?
  .container
    .content
      %h3 Tags
      = render partial: 'shared/tags', locals: { tags: @post.tags }
