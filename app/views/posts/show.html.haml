- set_page_title(@post.title)
= render partial: 'og_header'

.container
  .content.content--xxwide.u-center
    %h1.a-headline
      = post_status(@post)
      = @post.title
    .u-center#likes_count[@post]= render partial: 'like_link', locals: { subject: @post, user_list: true }
    = link_to 'Edit', edit_post_path(@post), class: 'a-button' if can? :edit, @post

.container
  .content.content--tight
    %h4
      = link_to "By #{@post.author.full_name}", @post.author
      %span.u-float-right
        = post_date(@post)
    = sanitize @post.content

    .u-center
      %h1#likes_icon[@post]= render partial: 'like_link', locals: { subject: @post }

- if @post.tags.any?
  .container
    .content
      %h3 Tags
      = render partial: 'shared/tags', locals: { tags: @post.tags }
