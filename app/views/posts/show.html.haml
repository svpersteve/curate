- set_page_title(@post.title)

.container
  .content
    %h1
      = post_status(@post)
      = @post.title
    %h3
      = link_to "By #{@post.author.full_name}", @post.author
      %span.u-float-right
        %i.fa.fa-calendar
        = post_date(@post)
    = link_to 'Edit', edit_post_path(@post), class: 'a-button a-button--corner' if can? :edit, @post
    = sanitize @post.content
