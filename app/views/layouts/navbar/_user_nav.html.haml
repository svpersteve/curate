.s-navbar__right
  - if current_user
    %a.js-open-notifications{href: '#'}
      .m-chat__inbox-icon{"data-badge" => (current_user.notifications.unread.size if current_user.notifications.unread.size > 0)}
        %i.fa.fa-bell-o
    - if current_user.conversations.any?
      = link_to conversation_messages_path(current_user.most_recent_conversation) do
        .m-chat__inbox-icon{"data-badge" => (current_user.unread_messages_count if current_user.unread_messages_count > 0)}
          %i.fa.fa-envelope.s-navbar__icon
    = link_to avatar_small(current_user, css_class: 'a-avatar--thumb js-user-menu-trigger'), user_path(current_user)

  - else
    = link_to 'Sign in', new_user_session_path, class: 's-navbar__sign-in'

- if current_user
  .s-navbar__dropdown.js-user-menu
    = link_to 'Your profile', user_path(current_user), class: 's-navbar__subnav'
    = link_to 'List artwork', new_artwork_path, class: 's-navbar__subnav' if can? :create, Artwork
    = link_to 'Write a post', new_post_path, class: 's-navbar__subnav' if can? :create, Post
    %hr
    = link_to 'Admin', admin_root_path, class: 's-navbar__subnav' if current_user.has_role? :admin
    = link_to 'Sign out', destroy_user_session_path, method: :delete, class: 's-navbar__subnav'

  #notifications= render partial: 'layouts/navbar/notifications'
