- if current_user
  - if user_likes_post?(current_user, subject)
    %p
      = link_to unlike_post_path, class: 'a-love-link', remote: true do
        %i.fa.fa-heart
      = likes_count(subject) if defined?(user_list)
  - else
    %p
      = link_to like_post_path, class: 'a-love-link', remote: true do
        %i.fa.fa-heart-o
      = likes_count(subject) if defined?(user_list)
- else
  %p
    = link_to new_user_session_path, class: 'a-love-link' do
      %i.fa.fa-heart-o
    = likes_count(subject) if defined?(user_list)
