.container
  .three-column-container

    .third.centered
      = render partial: 'shared/artist_block', locals: { user: @user }

      = link_to 'Edit profile', edit_user_path(@user), class: 'a-button u-margin-bottom--small' if can? :edit, @user

      = link_to "Message #{@user.name}", contact_user_path(@user), class: 'a-button' unless current_user == @user

    .half
      - if user.liked_posts.any?
        .content
          %h2 Activity
          = render partial: 'shared/activity', locals: { updates: @updates }
