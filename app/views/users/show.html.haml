- set_page_title(@user.full_name)

= render 'users/profile/intro', selector: '#profile-hero', src: @user.hero_image.url(:header_medium), srcset: {'900px' => @user.hero_image.url(:header_large)}

.container
  = link_to 'Edit profile', edit_user_path(@user), class: 'a-button a-button--corner' if can? :edit, @user
  .u-margin-top
  - if @user.liked_posts.any?
    .content
      %h2 Activity
      = render partial: 'shared/activity', locals: { user: @user }

  - if @user.posts.any?
    .content
      %h2 My posts
      = render partial: 'shared/posts', locals: { posts: current_user.posts.draft } if current_user && current_user.posts.draft.any?
      = render partial: 'shared/posts', locals: { posts: @user.posts.published }
