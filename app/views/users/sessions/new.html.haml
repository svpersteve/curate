.container
  .content.d-form
    %h1 Sign in
    - if devise_mapping.registerable?
      %p
        Not yet joined?
        = succeed '.' do
          = link_to "Register", new_registration_path(resource_name)

.container.u-center
  .content.content--separated.d-form
    = link_to user_facebook_omniauth_authorize_path, class: 'a-button a-button--elastic u-center' do
      %i.fa.fa-facebook-square
      Sign in with Facebook

.container
  .content.d-form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %p Email
      = f.email_field :email, autofocus: true, placeholder: "Email", class: 'u-full-width'
      %p Password
      = f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'u-full-width'
      - if devise_mapping.rememberable?
        .d-form__checkbox.u-margin-top--small
          = f.check_box :remember_me
          = f.label :remember_me

      .u-center.u-margin-top--small.u-margin-bottom--small
        = recaptcha_tags

      .u-margin-top
        = f.submit "Sign in", class: 'a-button'
      .u-margin-top
      = link_to "Forgotten your password?", new_password_path(resource_name), class: 'u-right'
